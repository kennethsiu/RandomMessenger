<?xml version="1.0" encoding="utf-8"?>
   <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/chat_background"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_layout_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <TextView android:id="@+id/chat_info"
            android:layout_weight="12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/stranger_chat"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/exitButton"
            android:layout_weight="1"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:text="@string/exit_chat" />

    </LinearLayout>
    <ListView
        android:id="@+id/message_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/chat_background"
        android:divider="@null"
        android:layout_below="@id/top_layout_info"
        android:layout_above="@+id/bottom_layout_interface"
        android:layout_gravity="start"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"/>

